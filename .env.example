# ⚠️ Copy this file to ".env" and set your real API key
OPENWEATHER_API_KEY=YOUR_OPENWEATHERMAP_KEY_HERE

# Default units: standard | metric | imperial
DEFAULT_UNITS=metric

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL=300

# Geocoding results limit (default: 1)
GEO_LIMIT=1

# HTTP timeout (connect,read) in seconds (default: 3.5,7)
HTTP_TIMEOUT=3.5,7

# Allowed CORS origin for frontend
# Use http://localhost:5000 for local dev, set to your domain in production
ALLOWED_ORIGIN=http://localhost:5000
